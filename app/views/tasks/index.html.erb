<p><%= link_to "Add new task", task_new_path %></p>

<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.detail %></p>
  <p><%= link_to "Show", task_path(task) %></p>
  <p><%= link_to "Edit", task_edit_path(task) %></p>
  <p><%= link_to "Delete", tasks_path(task),
  method: :delete,
  data: {confirm: "Are you sure?"}%></p>
<% end %>
